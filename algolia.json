---
layout: null
title : Algolia JSON
---

[
  {% for post in site.posts %}
    {
	  "date":"{{ post.date | date: '%s' }}",	
      "title":"{{ post.title }}",
      "author":"{{ site.author.name }}",
      "category": "{{ post.category }}",
      "tags":"{{ post.tags | join: ',' }}",
      "url": "{{ post.url }}",
      "description":"{{ post.content | strip_html | xml_escape | truncatewords: 50 }}"
    }
    {% unless forloop.last %},{% endunless %}
  {% endfor %}
]